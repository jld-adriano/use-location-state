{
  "name": "location-state-monorepo",
  "private": true,
  "workspaces": [
    "src/packages/*",
    "src/examples/**/*"
  ],
  "devDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "@types/jest": "^24.0.11",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^3.13.3",
    "prettier": "^1.17.0",
    "react-scripts": "^2.1.8",
    "typescript": "^3.4.4",
    "react-hooks-testing-library": "^0.5.0",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.1.2"
  },
  "scripts": {
    "commit": "git-cz",
    "bumpversion": "yarn lerna version --conventional-commits",
    "release:canary": "yarn lerna publish from-package --canary",
    "release": "yarn lerna publish from-package",
    "build": "yarn lerna run build",
    "test": "react-scripts test"
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiel/location-state.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jx,tsx,ts}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/*.config.{js,jx,tsx,ts}"
    ]
  }
}
