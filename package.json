{
  "name": "location-state-monorepo",
  "private": true,
  "workspaces": [
    "src/packages/*",
    "src/examples/**/*"
  ],
  "devDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "@types/jest": "^24.0.11",
    "codecov": "^3.3.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^3.13.3",
    "prettier": "^1.17.0",
    "react-hooks-testing-library": "^0.5.0",
    "react-scripts": "^3.0.0",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "7.0.0",
    "typescript": "3.4.4"
  },
  "scripts": {
    "commit": "git-cz",
    "release:beta": "yarn lerna publish --preid beta --dist-tag beta",
    "release:stable": "yarn lerna publish",
    "start": "yarn lerna run start --parallel",
    "build": "yarn lerna run build",
    "test": "react-scripts test"
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiel/location-state.git"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jx,tsx,ts}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/*.config.{js,jx,tsx,ts}"
    ]
  }
}
